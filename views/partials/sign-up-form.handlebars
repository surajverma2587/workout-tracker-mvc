<form id="sign-up-form">
  <div class="mb-3">
    <input
      type="email"
      class="form-control"
      id="email"
      placeholder="Email address"
    />
    <div class="form-text error">Invalid email address</div>
  </div>
  <div class="mb-3">
    <input
      type="password"
      class="form-control"
      id="password"
      placeholder="Password"
    />
    <div class="form-text">
      Should contain at least one uppercase, lowercase, numeric and special
      character
    </div>
    <div class="form-text error">Invalid password</div>
  </div>
  <div class="mb-3">
    <input
      type="password"
      class="form-control"
      id="confirm-password"
      placeholder="Confirm password"
    />
    <div class="form-text error">Passwords do not match</div>
  </div>
  <div class="mb-3">
    <input
      type="text"
      class="form-control"
      id="first-name"
      placeholder="First name"
    />
    <div class="form-text error">First name is required</div>
  </div>
  <div class="mb-3">
    <input
      type="text"
      class="form-control"
      id="last-name"
      placeholder="Last name"
    />
    <div class="form-text error">Last name is required</div>
  </div>
  <div class="mb-3">
    <input
      type="number"
      class="form-control"
      id="height"
      placeholder="Height (cm)"
    />
    <div class="form-text error">Height is required and cannot be 0</div>
  </div>
  <div class="mb-3">
    <input
      type="number"
      class="form-control"
      id="weight"
      placeholder="Weight (kg)"
    />
    <div class="form-text error">Weight is required and cannot be 0</div>
  </div>
  <div class="mb-3">
    <input type="number" class="form-control" id="age" placeholder="Age" />
    <div class="form-text error">Age is required and cannot be 0</div>
  </div>
  <div class="text-center mb-3">
    <button type="submit" class="btn control-btn">Create Account</button>
  </div>
</form>